
<h1 style="color:DarkOrange;">Add your non-vehicle images <%="#{@user.name}"%></h1>

<h4 style="color:DarkBlue">  Click "Add Images" when finished.</h4><br>


<button id="upload_widget" class="cloudinary-button">Upload</button><br><br>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script type="text/javascript">
    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'argustwo',
        upload_preset: 'b33rch33s3',
        folder: '<%="#{@user.id}"%>',
        }, (error, result) => { if (result.event == "success") {
            console.log(result.info) // result.info contains data from upload
        } })

        document.getElementById("upload_widget").addEventListener("click", function(){
            myWidget.open();
        }, false);

</script>

<% @image = Image.new %>
 <%= form_for @image do |f| %>
  <%=f.submit "Add Images" %>
  <% end %>
<br><br>

